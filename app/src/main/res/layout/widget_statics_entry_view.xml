<?xml version="1.0" encoding="UTF-8" ?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/value"
        style="@style/TextAppearance.SmartHome.Headline5"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="337" />

    <TextView
        android:id="@+id/unit"
        style="@style/TextAppearance.SmartHome.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginStart="2dp"
        app:layout_constraintBaseline_toBaselineOf="@id/value"
        app:layout_constraintStart_toEndOf="@id/value"
        tools:text="KWH" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:rotation="0"
        app:layout_constraintBottom_toBottomOf="@id/rate"
        app:layout_constraintStart_toStartOf="@id/value"
        app:layout_constraintTop_toTopOf="@id/rate"
        app:tint="@color/blue"
        android:src="@drawable/ic_arrow_drop_down" />

    <TextView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/grid_1"
        android:textColor="@color/silver_chalice"
        app:layout_constraintStart_toEndOf="@id/arrow"
        app:layout_constraintTop_toBottomOf="@id/value"
        tools:text="Decrease 27%" />

</androidx.constraintlayout.widget.ConstraintLayout>
