<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.SmartHome.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="backgroundColor">@color/charade</item>
    </style>

    <style name="Theme.SmartHome.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@color/charade</item>
    </style>

    <style name="Widget.SmartHome.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.SmartHome.TabTextAppearance</item>
    </style>

    <style name="ShapeAppearanceCircle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="SmartHome.BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottomsheet</item>
    </style>


    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="ShapeAppearanceOverlay.LargeComponent" parent="">
        <item name="cornerSize">@dimen/grid_2</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <!--    todo delete -->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottomsheet</item>
    </style>

</resources>